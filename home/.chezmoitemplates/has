{{- /* Usage:
{{- $has := includeTemplate "has" (list . "packageGroupName1" "packageGroupName2") | fromToml -}}
{{- if $has.packageGroupName1 -}}
...
*/ -}}

{{- $ctx := first . -}}
{{- $packageGroups := (includeTemplate "packageGroups" (list $ctx) | fromJson | jq ".[].name") -}}

{{- range (rest .) -}}
{{ . }} = {{ has . $packageGroups }}
{{ end -}}
